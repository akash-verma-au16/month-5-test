<h2 class="text-center mb-5">Sign Up</h2>
<form id='form-info' action="/userSignup" method="POST">
    <div class="mb-3 d-flex">
        <label for="name" class="form-label w-50 ms-5">Name</label>
        <input class="form-control w-50 me-5" type="text" id="name" name="name" required>
    </div>
    <div class="mb-3 d-flex">
        <label for="email" class="form-label w-50 ms-5">Email</label>
        <input class="form-control w-50 me-5" id="email" type="email" name="email" required>
    </div>
    <div class="mb-3 d-flex">
        <label for="password" class="form-label w-50 ms-5">Password</label>
        <input class="form-control w-50 me-5" id="password" type="password" name="password" required>
    </div>
    <div class="mt-4 d-flex">
        <button type="submit" class="btn btn-primary btn-lg px-5 w-100">Submit</button>
    </div>
</form>